@import 'variables.import'

.imports-table
  margin auto
  width 100%

  .imports-cell
    padding 0 5px

  .name-cell
    width 50%

  .progress-cell
    width 25%

  .status-cell
    width 20%

  .cancel-cell
    width 5%

.drop-overlay
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  /* Higher than header */
  z-index 6000
  background white-translucent

  .content
    position relative
    top 40%
    width 80%
    margin auto
    text-align center
    color black

.imports-overlay
  .content
    top 20%

  .imports
    color black
    position relative
    top 25%
    height 45%
    width 80%
    margin auto
    overflow-y scroll

.import-progress-bar
  background green-light
  height 8px
  margin-bottom 3px

.cancel-button
  border-width 0

  .cancel-white
    color white 

.overlay-active
  /* We prevent scrolling of the page content while overlay is visible */
  overflow hidden

  header, section, footer
    /* WebKit only for now */
    -webkit-filter blur(3px)
    -moz-filter blur(3px)
    -ms-filter blur(3px)
    -o-filter blur(3px)
    filter blur(3px)
