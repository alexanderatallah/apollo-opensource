.small-logo
  size = 15px
  display inline-block
  width size
  height size
  background-image url('/img/logo-white.png')
  background-repeat no-repeat
  background-size cover
  margin 0 5px

.big-logo
  size = 256px
  position fixed 
  width size
  height size
  top 145px
  left 50%
  margin-left (-1/2)*size
  text-align center
  cursor default
  background-image url('/img/logo.png')
  background-repeat no-repeat
  background-size cover
  -webkit-animation: fade 2s linear

  h1
    font-family "Source Sans Pro", sans-serif
    font-size 50px
    font-weight 300
    color rgba(20,20,20,0.8) 
    margin 0
    user-select none

.statistics
  stats_width = 486px
  width auto
  height: auto
  margin 0
  padding 0
  position fixed
  bottom 0
  left 50%
  margin-left (-1/2)*stats_width
  list-style none
  opacity 0.4

  li
    display inline-block
    float left
    position relative
    text-align center
    width 120px
    height 70px
    margin 0
    padding 20px 0
    vertical-align middle
    border-right 2px solid rgba(40,40,40,0.2)

    .label, .value
      display block

    .label
      font-weight 600

    .value
      font-weight 300
      font-size 40px
    
  li:last-child
    border 0

@-webkit-keyframes fade
  0%
    opacity: 0

  100%
    opacity: 1

@-webkit-keyframes travel
  0%
    -webkit-transform: translateY(0)

  100%
    -webkit-transform: translateY(100%)

@-webkit-keyframes follow
  0%
    -webkit-transform: translateY(-100%)

  100%
    -webkit-transform: translateY(0)
